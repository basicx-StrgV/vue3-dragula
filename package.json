{
  "name": "vue3-dragula",
  "version": "1.0.0",
  "description": "Vue3 wrapper library for dragula",
  "type": "module",
  "main": "./dist/vue3-dragula.umd.cjs",
  "module": "./dist/vue3-dragula.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/vue3-dragula.d.ts",
        "default": "./dist/vue3-dragula.js"
      },
      "require": {
        "types": "./dist/src/vue3-dragula.d.ts",
        "default": "./dist/vue3-dragula.umd.cjs"
      }
    }
  },
  "scripts": {
    "build": "run-p type-check build-only",
    "build-only": "vite build",
    "type-check": "tsc --noEmit -p tsconfig.json --composite false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basicx-StrgV/vue3-dragula.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "dragula"
  ],
  "author": "basicx-StrgV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/basicx-StrgV/vue3-dragula/issues"
  },
  "homepage": "https://github.com/basicx-StrgV/vue3-dragula#readme",
  "devDependencies": {
    "@babel/types": "^7.22.10",
    "@types/node": "^22.0.0",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.0.2"
  },
  "dependencies": {
    "@types/dragula": "^3.7.1",
    "dragula": "^3.7.3",
    "mitt": "^3.0.1",
    "vue": "^3.3.4"
  }
}
