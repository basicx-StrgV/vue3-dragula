{
    "include": ["src/**/*"],

    "compilerOptions": {
        "composite": true,
        "noImplicitAny": true,
        "allowJs": true,
        "esModuleInterop": true,
        "target": "ES6",
        "module": "ES2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist/"
    }
}